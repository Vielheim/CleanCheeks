{
  "name": "app-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"tsc --watch\" \"nodemon -q dist/index.js\"",
    "build": "rimraf ./dist && tsc",
    "lint": "npx prettier --write ./src/*",
    "predev": "sequelize-cli db:migrate:undo:all && sequelize-cli db:migrate && sequelize-cli db:seed:all && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:create": "sequelize-cli db:create",
    "db:migrate": "sequelize-cli db:migrate",
    "db:drop": "sequelize-cli db:drop",
    "db:migrate:undo": "sequelize-cli db:migrate:undo:all",
    "db:g:migration": "sequelize-cli migration:generate --name",
    "db:g:seed": "sequelize-cli seed:generate --name",
    "db:seed": "sequelize-cli db:seed:all",
    "db:unseed": "sequelize-cli db:seed:undo:all",
    "db:reset": "node scripts/resetDb.js && npm run db:seed",
    "db:reseed": "npm run db:migrate:undo && npm run db:migrate && npm run db:seed"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "pg": "^8.8.0",
    "sequelize": "^6.21.4",
    "typescript": "^4.8.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/pg": "^8.6.5",
    "@types/sequelize": "^4.28.14",
    "concurrently": "^7.3.0",
    "nodemon": "^2.0.19",
    "prettier": "2.7.1",
    "rimraf": "^3.0.2",
    "sequelize-cli": "^6.4.1"
  }
}
